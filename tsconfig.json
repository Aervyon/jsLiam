{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "alwaysStrict": true,
        "declaration": false,
        "strict": true,
        "incremental": true,
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "outDir": "./build",
        "removeComments": false,
        "resolveJsonModule": true,
        "types": ["node"],
        "module": "CommonJS",
        "target": "ES2020",
        "pretty": true
    },
    "include": ["src"],
}
