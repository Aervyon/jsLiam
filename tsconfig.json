{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "alwaysStrict": true,
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        //"strict": true,
        "incremental": true,
        "lib": [
            "esnext",
            "esnext.array",
            "esnext.asynciterable",
            "esnext.intl",
            "esnext.symbol"
        ],
            "module": "ESNext",
            "moduleResolution": "node",
            "noUnusedLocals": true,
            //"outDir": "./typings",
            "pretty": true,
            "removeComments": true,
            "resolveJsonModule": true,
            "sourceMap": false,
            "strictFunctionTypes": true,
            "strictBindCallApply": true,
            "target": "esnext",
            "types": ["node"]
        },
        "exclude": [
            "node_modules/",
            "typings/"
        ]
        //"include": ["src"]
}
